@model PasteCreateViewModel
@{
    ViewBag.Title = "Create";
}
<div class="row justify-content-md-center">
    <div class="col-md-6 col-md-offset-3">
        <div class="container-fluid text-center">
            <h1>Create Paste</h1>
            <form asp-action="Create">
                <div class="form-group">
                    <label asp-for="Message">Message</label>
                    <textarea class="form-control" asp-for="Message" rows="3"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OptionExpirationPaste">Paste Expiration</label>
                    <select  class="form-control" asp-for="OptionExpirationPaste">
                        <option value="Never">Never</option>
                        <option value="Burn after read">Burn after read</option>
                        <option value="10 Minutes">10 Minutes</option>
                        <option value="1 Hour">1 Hour</option>
                        <option value="1 Day">1 Day</option>
                        <option value="1 Week">1 Week</option>
                        <option value="2 Weeks">2 Weeks</option>
                        <option value="1 Month">1 Month</option>
                        <option value="6 Months">6 Months</option>
                        <option value="1 Year">1 Year</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="OptionExposurePaste">Paste Exposure</label>
                    <select  class="form-control" asp-for="OptionExposurePaste">
                        <option value="Public">Public</option>
                        <option value="Private">Private</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input type="text" class="form-control" asp-for="Title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="PasswordPaste"></label>
                    <input type="text" class="form-control" asp-for="PasswordPaste">
                    <span asp-validation-for="PasswordPaste" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mb-3">Create New Paste</button>
            </form>
            <h4>@ViewBag.message</h4>
        </div>

    </div>
</div>

